# Phần ngọn cây
print("* - bai10.py:2")
print("* - bai10.py:3")
print("***** - bai10.py:4")

# Phần thân cây (3 tầng)
for i in range(2, 5):
    stars = "*" * (i * 2 + 1)
    spaces = " " * (6 - len(stars) // 2)
    print(spaces + stars)

# Phần đáy cây
print("** - bai10.py:13")
print("** - bai10.py:14")

